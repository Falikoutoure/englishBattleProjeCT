@model EnglishBattle.Models.LoginViewModel

@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()

    <div class="jumbotron">
        <div>
            <h1>Bienvenue sur English Battle !</h1>
            <p class="lead">
                Exercez-vous a trouver les participes passés et
                prétérits des verbes irréguliers en anglais.
                <br />
            </p>
        </div>
        <div>

            <p>Veuillez vous connecter pour commencer.</p>
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @if (!string.IsNullOrEmpty(ViewBag.Errors))
                {
                    <div class="alert alert-danger">
                        @ViewBag.Errors
                    </div>
                }
                <div class="form-group">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <input type="submit" value="Se connecter" class="btn btn-default" />
                <div class="btn btn-link">@Html.ActionLink("S'inscrire", "Subscription", "Account")</div>
            </div>
        </div>
    </div>

    <div class="row text-center">
        <div class="col-md-12">
            <h2>Hall of fame</h2>
            <ul class="list-unstyled">
                <li>Charlie Martin - 100 verbes</li>
                <li>Yann Mortier - 88 verbes</li>
            </ul>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


